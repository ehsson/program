//수정 전 코드, 70점

#include <stdio.h>

int main(void)
{
	int T, N, sum;
	
	scanf("%d", &T);
	
	for(int t = 0; t < T; t++) {
		scanf("%d", &N);
		
		sum = 0;
		
		for(int i = 1; i <= N; i++) {
			if(i % 2 == 0) {
				sum -= i;
			}
			else {
				sum += i;
			}
		}
		
		printf("#%d %d\n", t + 1, sum);
	}
	
	return 0;
}

// 수정 후 코드, 90점

#include <stdio.h>

int main(void)
{
	int T, N, sum;
	
	scanf("%d", &T);
	
	for(int t = 0; t < T; t++) {
		scanf("%d", &N);
		
		if(N % 2 == 0) 
			sum = (int)(N / 2) * -1;
		else
			sum = (int)(N / 2) + 1;
		
		printf("#%d %d\n", t + 1, sum);
	}
	
	return 0;
}


// 80점, 배열에 전체 값을 미리  저장해 두고 재활용
#include <stdio.h>

int main ( void ) {
	int T, N, chk;
	int arr[11] = { 0 };

	chk = 1;

	for (int i = 1; i <= 10; i++ ) {
		arr[ i ] = arr[ i - 1 ] + (i * chk);
		chk *= -1;
	}

	scanf("%d", &T);

	for (int i = 1; i <= T; i++ ) {
		scanf("%d", &N);
		printf("#%d %d\n", i, arr[ N ] );
	}

	return 0;
}


// 95점, 3항 연산자를 사용해서 if문을 사용하지 않고 계산
#include <stdio.h>

int main ( void ) {
	int T, N;

	scanf("%d", &T);

	for (int i = 1; i <= T; i++ ) {
		scanf("%d", &N);
		printf("#%d %d\n", i, (int)( (N + 1) / 2 ) * ((N % 2) == 0 ? -1 : 1));
	}

	return 0;
}


