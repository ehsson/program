#include <stdio.h>

int main(void)
{
	int T, x, y, tmp1, i, cnt;
	
	scanf("%d", &T);
	
	for(int k = 0; k < T; k++) {
		scanf("%d %d", &x, &y);

		cnt = 1;
		i = 0;
		tmp1 = 1;
		
		while(1) {
			tmp1 += (i * 2);

			if(tmp1 <= (y - x) && tmp1 + (i * 2 + 1) >= (y - x)) {
				if((tmp1 + (i * 2 + 1) - (int)((i * 2 + 1) / 2)) <= (y - x))
					cnt++;

				break;
			}

			i++;
			cnt += 2;
		}

		printf("%d\n", cnt);
		
	}	
	return 0;
}
