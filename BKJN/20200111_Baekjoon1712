//https://www.acmicpc.net/problem/1712

#include <stdio.h>

int main(void)
{
	int A, B, C, i = 0;
	
	scanf("%d %d %d", &A, &B, &C);
	
	i = A / (C - B) + 1;
	
	if(B >= C) 
		i = -1;
	
	printf("%d\n", i);
	
	return 0;
}



#include <stdio.h>

int main(void)
{
	int A, B, C, i = 0;
	
	scanf("%d %d %d", &A, &B, &C);
	
	if(B >= C) {
		i = -1;
	}
	else {
		while(A + (B * i) >= (C * i)) {
			i++;
		}	
	}
	
	printf("%d\n", i);
	
	return 0;
}
