#include <iostream>
#include <queue>
using namespace std;

int N, C, M;

priority_queue < pair<int, int>> pq[2001];	// {end, box}

int main(void)
{
	ios::sync_with_stdio(false);
	cin.tie(0);
	cout.tie(0);
	cin >> N >> C;

	cin >> M;

	for (int m = 0; m < M; m++) {
		int start, end, box;
		cin >> start >> end >> box;

		pq[start].push({ -end, box });
	}

	int cnt = 0, total = 0;
	priority_queue<pair<int, int>> truck;

	for (int i = 1; i <= N; i++) {
		while (truck.size() > 0 && truck.top().first == -i) {
			int box = truck.top().second;
			total -= box;
			cnt += box;
			truck.pop();
		}

		while (pq[i].size() != 0) {
			int dest = pq[i].top().first;
			int box = pq[i].top().second;
			pq[i].pop();

			if (total + box <= C) {
				truck.push({ dest, box });
				total += box;
			}
			else {
				if (total < C) {
					truck.push({ dest, C - total });
					total = C;
				}

				break;
			}
		}
	}

	cout << cnt << "\n";

	return 0;
}
