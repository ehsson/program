#include <stdio.h>

int arr[200001];

int main(void)
{
	int T, N;
	int cut, min;
	long long sum;
	FILE* pf;
	freopen_s(&pf, "input.txt", "r", stdin);

	scanf_s("%d", &T);

	for (int t = 1; t <= T; t++)
	{
		scanf_s("%d", &N);

		for (int j = 0; j < N; j++)
			scanf_s("%d", &arr[j]);

		for (int i = 0; i < N; i++)
		{
			scanf_s("%d", &cut);

			if (i == 0)
				min = cut;

			if (min > cut - i)
				min = cut - i;
		}

		sum = 0;

		for (int k = 0; k < N; k++)
		{
			if (arr[k] > min)
				sum += arr[k] - min;
		}

		printf("Case #%d\n%lld\n", t, sum);
	}

	return 0;
}

//test case

2
3
1 3 5
5 5 5 
3
1 3 5
5 4 3
